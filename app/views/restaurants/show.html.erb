<h2> <%= @restaurant.name %></h2>

<h4>Average Rating:
  <%=  (@restaurant.reviews.map { |review| review.rating }.reduce(:+) / @restaurant.reviews.size.to_f) %>
</h4>
<h4>Address:</h4>
<p><%= @restaurant.address %></p>

<h4>Category:</h4>
<p><%= @restaurant.category %></p>

<%= link_to "Edit", edit_restaurant_path(@restaurant) %>
<%= link_to "Delete", restaurant_path(id: @restaurant.id), method: :delete, data: { confirm: "Are you sure?" } %>
<br>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<br>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %> - Rating:
      <%= "â­" * review.rating %>
      <%= link_to "Edit review", edit_restaurant_review_path(@restaurant) %></li>
  <% end %>
</ul>
<p><%= link_to "Back to restaurants", restaurants_path %></p>


